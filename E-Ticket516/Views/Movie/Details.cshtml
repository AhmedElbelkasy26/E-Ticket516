@using E_Ticket516.Models.ViewModels
@model MovieAndActorMoviesVM
<div class="container">

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/images/movies/@Model.Movie.Images.ToList()[0].ImageUrl" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">@Model.Movie.Category.Name</p>
                    <p class="card-text">@Model.Movie.Cinema.Name</p>
                    <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                </div>
            </div>
            <div>
                @foreach (var item in Model.ActorMovies)
                {
                    <img src="~/images/cast/@item.Actor.ProfilePicture" />
                }
            </div>



        </div>
    </div>


    <div style="height:300px;width:auto;" >

        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Movie.Images.ToList().Count; i++)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : null)"  ></button>
                }

            </div>
            <div class="carousel-inner">
                @for(int i =0 ; i<Model.Movie.Images.ToList().Count; i++)
                {
                    <div class="carousel-item @(i==0 ? "active" : null)">
                        <img  src="~/images/movies/@Model.Movie.Images.ToList()[i].ImageUrl" class="d-block w-100" alt="...">
                    </div>
                }

                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>
</div>